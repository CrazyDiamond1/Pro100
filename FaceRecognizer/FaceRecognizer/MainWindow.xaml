<Window x:Class="FaceRecognizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Take a Picture" 
                Margin="634,28,319,575"
                Click="TakeAPicture"/>
        <Button Content="Retake" 
                Margin="634,142,319,465"
                Click="Retake"/>
        <Label x:Name="ReturnText" 
               Content="{Binding Path=Result}" 
               Margin="10,597,680,42"
               Height="50"/>
        <Label Margin="10,0,680,97"/>
    </Grid>
</Window>
